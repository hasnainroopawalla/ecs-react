{
  "name": "ecs-react",
  "version": "1.1.5",
  "description": "A lightweight ECS framework for React",
  "repository": "https://github.com/hasnainroopawalla/ecs-react",
  "author": "Hasnain Roopawalla",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "setup": "yarn install --ignore-scripts",
    "build": "tsup",
    "prepare": "yarn build",
    "publish:dry-run": "npm publish --dry-run",
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --config jestconfig.json --watch",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "createTag": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "typescript",
    "react",
    "ecs",
    "entity-component-system"
  ],
  "engines": {
    "node": ">=14"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.11",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "react": "^19.1.1",
    "ts-jest": "^29.4.1",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "dependencies": {}
}
